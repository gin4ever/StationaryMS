@model IEnumerable<eProject.Models.Item>

@{ ViewData["Title"] = "AdminIndexItem";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml"; }

@section css{
    <link href="~/css/step-wizard.css" rel="stylesheet" />
}

<div class="wrapper">
    <div class="gambo-Breadcrumb">
        <div class="container-fluit">
            <div class="row">
                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Item List</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div style="margin-left: 10px; margin-right: 10px">

            @TempData["cnt"]
            <div class="text-center" style="padding:10px">
                @using (Html.BeginForm())
                {
                    <input type="text" name="itemName" placeholder="Enter name of item..." />
                    <input type="submit" value="Search" class="btn-info" />}
            </div>

            <p>
                <a asp-action="AdminCreateItem">Create New</a>
            </p>
            <table class="table table-bordered" border="1">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Images)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Stock)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Unit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupplierCode)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemCode)
                            </td>
                            <td>
                                <img src="~/@Url.Content(item.Images)" width="100" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Unit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category_Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierCode)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "AdminEditItem", "Item", new { code = item.ItemCode })|
                                @Html.ActionLink("Details", "AdminDetailsItem", "Item", new { itemCode = item.ItemCode })
                                @*<a asp-action="Delete" asp-route-id="@item.ItemCode">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


</div>
</div>

@using X.PagedList;
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Index";
    var pageList = (IPagedList)ViewBag.data;
}


<div>
    @using (Html.BeginForm())
    {
        <input type="text" name="itemName" placeholder="Enter item name..." />
        <input type="submit" value="Search" class="btn-info" />
    }
</div>
<div>
    <h3>Item List</h3>
    @Html.PagedListPager(pageList, page => Url.Action("Index", new { page }))
    <table class="table">
        <tr>
            <th>Item Code</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Unit</th>
            <th>Category_Id</th>
            <th>SupplierCode</th>
            <th>Images</th>
        </tr>
        @foreach (var item in ViewBag.data)
        {
            <tr>
                <td>@item.ItemCode</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Unit</td>
                <td>@item.Category_Id</td>
                <td>@item.SupplierCode</td>
                <td>@item.Images</td>
            </tr>
        }
    </table>
</div>

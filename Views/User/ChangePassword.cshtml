@model eProject.Models.Users

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<style>
    th.style {
        color: #2b2f4c;
        //border: none;
        width: 150px;
    }

    th.style2 {
        color: #17a2b8;
        //border: none;
    }

    .table {
        margin-left: auto;
        margin-right: auto;
        width: 500px;
        border-radius: 15%;
        -moz-border-radius: 15%;
        -webkit-border-radius: 15%;
    }

    h3 {
        text-align: center;
    }
    h2 {
        text-align: center;
    }
    th img {
        border-radius: 15%;
        -moz-border-radius: 15%;
        -webkit-border-radius: 15%;
        width: 100px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>

@section css{
    <link href="~/css/step-wizard.css" rel="stylesheet" />
}
<div class="wrapper">
    <div class="gambo-Breadcrumb">
        <div class="container-fluit">
            <div class="row">
                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Profile", "User")">Profile</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="#">Profile</a> </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <h2>Stationery Management System</h2>
    <h3>Welcome @Html.DisplayFor(model => model.Fullname) </h3>
    <div style="margin-left: 10px; margin-right: 10px">
        <div class="container-fluit">
            @using (Html.BeginForm("ChangePassword", "User"))
            {

                @if (@ViewBag.alertchangepass != null && @ViewBag.alertchangepass.ToString().Length > 0)
                {
                    <div class="alert alert-@ViewBag.alertchangepass">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <ul>
                            @foreach (var a in @ViewBag.messagechangepass)
                            {
                                <li>@Html.Raw(a)</li>
                            }
                        </ul>
                    </div>
                }
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table class="table table-bordered">
                    <tr>
                        <th class="style">
                            @Html.LabelFor(model => model.Username)
                        </th>
                        <th class="style2">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                        </th>
                    </tr>
                    <tr>
                        <th class="style">
                            Your current password
                        </th>
                        <th class="style2">

                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </th>
                    </tr>
                    <tr>
                        <th class="style">
                            New password
                        </th>
                        <th class="style2">

                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })

                        </th>
                    </tr>

                    <tr>
                        <th class="style">

                            Confirm new password
                        </th>
                        <th class="style2">

                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                        </th>
                    </tr>

                    <tr>
                        <th colspan="2" class="form-group" style="text-align:center">
                            <input type="submit" value="Change" class="btn btn-success" />
                        </th>
                    </tr>
                </table>


            }
        </div>
        <div>
            <input class="btn btn-primary" type="button" value="Go Back" onclick="location.href='@Url.Action("Profile", "User")'" />
        </div>
    </div>
    
</div>
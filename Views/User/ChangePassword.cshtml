
@model eProject.Models.Users

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<h1>Change Password</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="User" asp-action="ChangePassword" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User_Id" />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <p></p>
                <img src="~/@Url.Content(Model.Images)" width="100" />
                <input type="file" name="file" id="file" asp-for="Images" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

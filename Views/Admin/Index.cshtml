@model IEnumerable<eProject.Models.Admins>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@section css{
    <link href="~/css/step-wizard.css" rel="stylesheet" />
}

<div class="wrapper">
    <div class="gambo-Breadcrumb">
        <div class="container-fluit">
            <div class="row">
                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">List of Admin</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div style="margin-left: 10px; margin-right: 10px">
        <div class="text-center" style="padding:10px">
            @using (Html.BeginForm())
            {
    <input type="text" name="name" placeholder="Enter username..." />
                    <input type="submit" value="Search" class="btn-info" />}
        </div>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-bordered" border="1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Admin_Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Images)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Admin_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <img src="~/@Url.Content(item.Images)" width="100" />
        </td>
        <!--<td>-->
        @*@Html.ActionLink("Details", "Details", new { uname = item.Username })*@
        @*@Html.ActionLink("Details","Details", new {id = item.Admin_Id }, new {"return confirm('Are you sure?')"})*@
        <!--</td>-->
    </tr>}
            </tbody>
        </table>
    </div>
</div>
